<div id="calendarModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <%= bootstrap_form_for(@calendar, remote: request.xhr?, :method => "put",
            html: { class: 'form-horizontal', id: 'calendar-form' }) do |f| %>
        <div class="modal-header">
            <button type="button" class="close pull-right" id="calendar_close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h3>Edit Calendar</h3>
        </div>
        <div class="modal-body">
            <div id="calendar_errorbox"><ul></ul></div>
            <%= f.text_field :title, value: "", label: 'Title' %>
            <%= f.text_area  :description, label: 'Description', :cols => 40, :rows => 5 %>
            <%= f.select :color, Calendar.color.options %>
        </div>
        <div class="modal-footer">
            <%= f.submit "Save", class: "btn btn-primary pull-right" %>
         </div>
    <% end %>
</div>
