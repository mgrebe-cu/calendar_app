$('#calendar_title').val("<%= @calendar.title %>");
$('#calendar_description').val("<%= @calendar.description %>");
$('#calendar_color').val("<%= @calendar.color %>");
$('#calendar-form').attr('action',"/calendars/<%= @calendar.id %>");
$('#calendar_model_title').text('Edit Calendar');
<% if @calendar.public %>
    $('#calendar_public').attr('checked', true);
<% else %>
    $('#calendar_public').attr('checked', false);
<% end %>
$('#calendar_shared').html("<%= j render('calendars/shares') %>")
$(document).ready(function(){ 
    $('.tooltip_class').tooltip();
});
$('.calendar_delete_btn').remove();
<% if !@calendar.default %>
$('.btn-primary').after('<%= j render(:partial => "calendars/delete_btn", :object => :calendar) %>');
<% end %>
$('#calendarModal').modal();
