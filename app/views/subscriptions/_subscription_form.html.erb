<div id="subscriptionModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <%= bootstrap_form_for(@subscription, remote: request.xhr?, :method => "put",
            html: { class: 'form-horizontal', id: 'subscription-form' }) do |f| %>
        <div class="modal-header">
            <button type="button" class="close pull-right" id="subscription_close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h3 id="subscription_model_title">Edit Subscribed Calendar</h3>
        </div>
        <div class="modal-body">
            <div id="subscription_errorbox"><ul></ul></div>
            <%= f.text_field :title, value: "", label: 'Title' %>
            <%= f.select :color, Calendar.color.options %>
        </div>
        <ul class="subscription_info">
        <li><b>Subscribed From User: </b>
            <span id = "subscription_user" class="subscription_item"></span></li>
        <li><b>Subscribed From Calendar: </b>
            <span id = "subscription_calendar" class="subscription_item"></span></li>
        <li><b>Subscribed From Type: </b>
            <span id = "subscription_type" class="subscription_item"></span></li>
        </ul>
        <div class="modal-footer">
            <%= f.submit "Save", class: "btn btn-primary pull-right" %>
         </div>
    <% end %>
</div>
