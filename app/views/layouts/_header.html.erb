<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <% if signed_in? %>
        <%= link_to "Grebe Calendar App", user_path(current_user), id: "logo" %>
      <% else %>
        <%= link_to "Grebe Calendar App", root_path, id: "logo" %>
      <% end %>
      <nav>
        <ul class="nav pull-right">
          <% if signed_in? %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="icon-user icon-white"></i><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li><%= link_to signout_path, method: "delete" do %>
                    Signout <i class="icon-off"></i>
                    <% end %></li>
              </ul>
            </li>
          <% else %>
             <% if request[:PATH_INFO] != '/signin' %>
              <li><%= link_to "Sign In", signin_path %></li>
             <% end %>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>


 
