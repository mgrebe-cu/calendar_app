<li>
    <span class="content">
        <%= event.start_date %>
        <br>
        <%= link_to event.title, edit_event_path(event), :class => 'edit_event_link' %>
        <% if !event.location.nil? && event.location.size != 0 %>
            at <%= event.location %>
        <% end %>
        <br>
        <% if event.all_day || event.start_time.nil? || event.end_time.nil? %>
            All day
        <% else %>
            <%= event.start_time.strftime('%I:%M %p') %> to <%= event.end_time.strftime('%I:%M %p') %>
        <% end %>
        <%= link_to "delete", event, method: :delete,
                            data: { confirm: 'You sure?' },
                            title: event.title %>
    </span>
</li>
